{
  "manifest_version": 3,
  "name": "Monitor de Tarefas SAU",
  "version": "1.0",
  "description": "Notifica sobre novas tarefas no Sistema de Atendimento ao Usu√°rio (SAU).",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "alarms",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": ["https://egov.santos.sp.gov.br/sau/*"]
}
